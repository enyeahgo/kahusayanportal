<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top header-inner-pages">
    <div class="container d-flex align-items-center">

      <h1 class="logo mr-auto"><a href="/">{{title}}</a></h1>
      <!-- Uncomment below if you prefer to use an image logo -->
      <!-- <a href="index.html" class="logo mr-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li><a href="/">Home</a></li>
          {{#if isVerified}}
          <li><a href="/announcements">Announcements</a></li>
          {{/if}}
          {{!-- <li><a href="/services">Services</a></li>
          <li><a href="/portfolio">Portfolio</a></li>
          <li><a href="/team">Team</a></li> --}}
          <li class="drop-down active"><a href="">Account</a>
            <ul>
                {{#if isLoggedIn}}
                <li><a href="/profile">Profile</a></li>
                <li><a href="/logout">Logout</a></li>
                {{else}}
                <li><a href="/register">Create Account</a></li>
                <li><a href="/login">Login</a></li>
                {{/if}}
            </ul>
          </li>

        </ul>
      </nav><!-- .nav-menu -->

        {{!-- {{#if isLoggedIn}}
        <a href="/profile" class="get-started-btn">My Profile</a>
        {{else}}
        <a href="/register" class="get-started-btn">Register</a>
        {{/if}} --}}

    </div>
  </header><!-- End Header -->

  <main id="main">

    <!-- ======= Section ======= -->
    <section>
      <div class="container">

        <div class="row justify-content-center">

          <div class="col-lg-6 mt-3 mt-lg-5">
            <div class="card shadow">
              <div class="card-header">
                <div class="section-title">
                  <h2>PROFILE</h2>
                  {{#if isVerified}}
                  <p style="color: green;">VERIFIED</p>
                  {{else}}
                  <p style="color: red;">WAITING FOR VERIFICATION</p>
                  {{/if}}
                </div>
              </div>
              <div class="card-body">
                <ul>
                  {{#if isOfficer}}
                  <li style="text-transform: uppercase">FULLNAME: <p><strong>{{name}}</strong></p></li>
                  {{else}}
                  <li>FULLNAME: <p><strong>{{name}}</strong></p></li>
                  {{/if}}
                  <li style="text-transform: uppercase">POSITION: <p><strong>{{userdata.pos}}</strong></p></li>
                  <li style="text-transform: uppercase">UNIT: <p><strong>{{userdata.unit}}</strong></p></li>
                  <li style="text-transform: uppercase">COURSE: <p><strong>{{userdata.course}}</strong></p></li>
                  <li>EMAIL: <p><strong>{{userdata.email}}</strong></p></li>
                  <li>MOBILE: <p><strong>{{userdata.mobile}}</strong></p></li>
                </ul>
              </div>
              <div class="card-footer">
                  <a class="btn btn-primary btn-block text-center" href="#">Edit Details<a/>
              </div>
            </div>
          </div>

        </div>

      </div>
    </section><!-- End Section -->

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer">

    <div class="container footer-bottom clearfix">
      <div class="copyright">
        <strong><span>Kahusayan</span></strong> &copy; <script>document.write(new Date().getFullYear())</script>
      </div>
      <div class="credits">
        Designed by <a href="https://create-cheap-commerce.web.app">Enliven Technologies Philippines</a>
      </div>
    </div>
  </footer><!-- End Footer -->

  <a href="#" class="back-to-top"><i class="ri-arrow-up-line"></i></a>
  <div id="preloader"></div>

  <!-- Vendor JS Files -->
  <script src="assets/vendor/jquery/jquery.min.js"></script>
  <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

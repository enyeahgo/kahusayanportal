  <main id="main">

    <!-- ======= Section ======= -->
    <section class="contact">
      <div class="container">

        

        <div class="row justify-content-center">

          <div class="col-lg-8 mt-3 mt-lg-5">

            <div class="card shadow">
              <div class="card-header">
                <div class="section-title">
                  <h2>DIRECTORATE REGISTRATION</h2>
                  <p style="color: red;">{{error}}</p>
                </div>
              </div>
              <div class="card-body">
                <form action="/td/register" method="post" role="form">
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="rank">Rank</label>
                      <select name="rank" id="rank" class="form-control" required>
                        <option disabled selected>Select your rank</option>
                        <option value="MAJ">Major</option>
                        <option value="CPT">Captain</option>
                        <option value="1LT">First Lieutenant</option>
                        <option value="2LT">Second Lieutenant</option>
                        <option value="Tsg">Technical Sergeant</option>
                        <option value="Ssg">Staff Sergeant</option>
                        <option value="Sgt">Sergeant</option>
                        <option value="Cpl">Corporal</option>
                        <option value="PFC">Private First Class</option>
                        <option value="Pvt">Private</option>
                      </select>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="os">AFPOS/MOS</label>
                      <select name="os" id="os" class="form-control" required>
                        <option disabled selected>Select your Specialty</option>
                        <option value="CAV">Cavalry</option>
                        <option value="INF">Infantry</option>
                        <option value="FA">Field Artillery</option>
                        <option value="CE">Combat Engineer</option>
                        <option value="SC">Signal</option>
                        <option value="FIN">Finance</option>
                        <option value="AGS">Adjutant General Service</option>
                        <option value="MI">Military Intelligence</option>
                      </select>
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="course">Course</label>
                      <select name="course" id="course" class="form-control" required>
                        <option disabled selected>Select your course</option>
                        <option value="AOAC">Armor Officer Advance Course</option>
                        <option value="AOBC">Armor Officer Basic Course</option>
                        <option value="ANCOAC">Armor NCO Advance Course</option>
                        <option value="ANCOBC">Armor NCO Basic Course</option>
                        <option value="">Not Applicable</option>
                      </select>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="pos">Position</label>
                      <select name="pos" id="pos" class="form-control" required>
                        <option disabled selected>Select your Position</option>
                        <option value="Course Director">Course Director</option>
                        <option value="Tactical Officer">Tactical Officer</option>
                        <option value="Course NCO">Course NCO</option>
                        <option value="Tactical NCO">Tactical NCO</option>
                        <option value="Registrar">Registrar</option>
                        <option value="Admin">Admin</option>
                        <option value="OPSEC">OPSEC</option>
                        <option value="Supply">Supply</option>
                      </select>
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="fname">First Name</label>
                      <input type="text" name="fname" class="form-control" id="fname" data-rule="required" data-msg="Please enter your first name" placeholder="Juan" value="{{fname}}" required />
                      <div class="validate"></div>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="mname">Middle Name</label>
                      <input type="text" class="form-control" name="mname" id="mname" data-rule="required" data-msg="Please enter your middle name" placeholder="Rivera" value="{{mname}}" required />
                      <div class="validate"></div>
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="lname">Last Name</label>
                      <input type="text" name="lname" class="form-control" id="lname" data-rule="required" data-msg="Please enter your last name" placeholder="Dela Cruz" value="{{lname}}" required />
                      <div class="validate"></div>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="suffix">Suffix</label>
                      <select name="suffix" id="suffix" class="form-control">
                        <option value='' selected>Not Applicable</option>
                        <option value="Sr">Senior</option>
                        <option value="Jr">Junior</option>
                        <option value="I">I</option>
                        <option value="II">II</option>
                        <option value="III">III</option>
                        <option value="IV">IV</option>
                      </select>
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="email">Email Address</label>
                      <input type="email" name="email" class="form-control" id="email" data-rule="email" data-msg="Please enter a valid email address" value="{{email}}" required />
                      <div class="validate"></div>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="mobile">Mobile Number</label>
                      <input type="tel" class="form-control" name="mobile" id="mobile" data-rule="maxlen:11" data-msg="Maximum 11 digits" placeholder="09XXXXXXXX" value="{{mobile}}" required />
                      <div class="validate"></div>
                    </div>
                  </div>

                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="password">Password</label>
                      <input type="password" name="password" class="form-control" id="password" data-rule="minlen:4" data-msg="Please enter at least 4 chars" required />
                      <div class="validate"></div>
                    </div>
                    <div class="form-group col-md-6">
                      <label for="rpass">Retype Password</label>
                      <input type="password" class="form-control" name="rpass" id="rpass" data-rule="required" data-msg="Please retype your password here" required />
                      <div class="validate"></div>
                    </div>
                  </div>
              </div>
              <div class="card-footer">
                  <input class="btn btn-primary btn-block text-center" type="submit" value="Continue" />
                  <div class="text-center mt-3"><p>Already have account? <a href="/td/login">Login</a></p></div>
                </form>
              </div>
            </div>
            

              
          </div>

        </div>

      </div>
